<h1>Categories</h1>
<% @categories.each do |category| %>
  <ul>
    <li><%= category.description %></li>
    <li><%= link_to "Delete", category_path(category), method: :delete, data: {confirm: "delete category?"} %></li>
    <li><%= link_to "Show",category_path(category) %> </li>
    <li><%= link_to "Edit",edit_category_path(category) %> </li>
  </ul>
<% end %>