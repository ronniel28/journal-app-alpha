<% @user.errors.any? %>
<ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>

<div class="w-full flex flex-wrap">

<!-- Login Section -->
<div class="w-full md:w-1/2 flex flex-col">

    <div class="flex justify-center md:justify-start pt-12 md:pl-12 md:-mb-24">
        <a href="#" class="bg-black text-white font-bold text-xl p-4">Journal App</a>
    </div>

    <div class="flex flex-col justify-center md:justify-start my-auto pt-8 md:pt-0 px-8 md:px-24 lg:px-32">
        <p class="text-center text-3xl">Welcome.</p>
        <%= form_with model: @user, class: "flex flex-col pt-3 md:pt-8"  do |form| %>
        
            <div class="flex flex-col pt-4">
              <%= form.label :first_name, class: "text-lg"%><br/>
              <%= form.text_field :first_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Enter your email" %><br/>
               
            </div>

            <div class="flex flex-col pt-4">
              <%= form.label :last_name, class: "text-lg"%><br/>
              <%= form.text_field :last_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline", placeholder:"Password" %><br/>
             </div>

             <div class="flex flex-col pt-4">
             <%= form.label :username, class: "text-lg"%><br/>
             <%= form.text_field :username, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Enter your email" %><br/>
              
           </div>

           <div class="flex flex-col pt-4">
           <%= form.label :email, class: "text-lg"%><br/>
           <%= form.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Enter your email" %><br/>
            
         </div>

         <div class="flex flex-col pt-4">
         <%= form.label :password, class: "text-lg"%><br/>
         <%= form.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Enter your email" %><br/>
          
       </div>
       <%= form.submit(@user.new_record? ? "Sign Up" : "Update", class: "bg-black text-white font-bold text-lg hover:bg-gray-700 p-2 mt-8") %>
        <% end %>
  
    </div>

</div>

<!-- Image Section -->
<div class="w-1/2 shadow-2xl">
    <img class="object-cover w-full h-screen hidden md:block" src="https://images.unsplash.com/photo-1592474096967-7e5d62070cf7?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=387&q=80">
</div>
</div>